<?xml version="1.0" encoding="UTF-8"?>
<tlpo_markup_schema version="1.2" xmlns="https://tcmve.github.io/tlpo">
  <description>
    Thomistic LLM Parameter Ontology (TLPO) Markup Schema v1.2
    For diagnostic output annotation in TCMVE
    @ECKHART_DIESTEL | DE | 2025-11-15
  </description>

  <element name="tlpo_markup">
    <attribute name="version" type="string" required="true"/>
    <attribute name="tcmve_mode" values="diagnostic|full_diagnostic" default="diagnostic"/>
    
    <child name="query" type="string" required="true"/>
    <child name="proposition" type="string" required="true"/>
    
    <child name="flag" minOccurs="30" maxOccurs="30">
      <attribute name="id" type="integer" required="true"/>
      <attribute name="name" type="string" required="true"/>
      <child name="generator" type="float" min="0.0" max="1.0"/>
      <child name="verifier" type="float" min="0.0" max="1.0"/>
      <child name="arbiter" type="float" min="0.0" max="1.0"/>
      <child name="thomistic" type="string"/>
    </child>
    
    <child name="tqi_weighted" type="float" min="0.0" max="1.0"/>
    <child name="tcs_weighted" type="float" min="0.0" max="1.0"/>
    
    <child name="audit">
      <child name="timestamp" type="datetime"/>
      <child name="user" type="string"/>
      <child name="location" type="string"/>
    </child>
  </element>
</tlpo_markup_schema>
